<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        >


        <RelativeLayout
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/title"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@id/account_info_and_bell"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_marginEnd="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/profile"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView
                                android:fontFamily="@font/poppins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ridho Pujiono" android:textStyle="bold"/>
                            <TextView
                                android:fontFamily="@font/poppins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Masyarakat Tegalbang" android:textSize="12dp" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bell"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/saldo_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_info_and_bell"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/saldo_card" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginTop="21dp"
                android:layout_marginStart="15dp">
                <LinearLayout
                    android:id="@+id/saldo"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Saldo"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="normal" />
                    <TextView
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Rp. 350.000" android:textSize="15dp" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_below="@+id/saldo"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    >

                    <Button
                        android:fontFamily="@font/poppins"
                        android:background="@drawable/reedem_button"
                        android:layout_width="wrap_content"
                        android:textColor="#196759"
                        android:textSize="11dp"
                        android:text="Tukar"
                        android:textAllCaps="false"
                        android:layout_height="36dp"
                        />
                </RelativeLayout>

            </RelativeLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/saveEarthText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/saldo_container"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Bantu Selamatkan Bumi"
                android:textColor="#414040"
                android:textSize="17dp" />

        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/menuRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/saveEarthText"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"

                >
                <RelativeLayout
                    android:id="@id/aboutTrashMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/about_trash"
                        />

                </RelativeLayout>
                <TextView
                    android:layout_below="@+id/aboutTrashMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tentang sampah"
                    android:textSize="10dp"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="2dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"

                >
                <RelativeLayout
                    android:id="@id/enviromentCareMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/enviroment_care"
                        />

                </RelativeLayout>
                <TextView
                    android:layout_below="@+id/enviromentCareMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peduli Lingkungan"
                    android:textSize="10dp"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="2dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"

                >
                <RelativeLayout
                    android:id="@id/RecyclingMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/recycle"
                        />

                </RelativeLayout>
                <TextView
                    android:layout_below="@+id/RecyclingMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daur Ulang"
                    android:textSize="10dp"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="2dp"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/menuRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menuRow1"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"

                >
                <RelativeLayout
                    android:id="@id/locationListMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location"
                        />

                </RelativeLayout>
                <TextView
                    android:layout_below="@+id/locationListMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daftar Lokasi"
                    android:textSize="10dp"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="2dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"

                >
                <RelativeLayout
                    android:id="@id/sellTrashMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/trash" />

                </RelativeLayout>
                <TextView
                    android:layout_below="@+id/sellTrashMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jual Sampah"
                    android:textSize="10dp"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="2dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"

                >
                <RelativeLayout
                    android:id="@id/mitraMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mitra"
                        />

                </RelativeLayout>
                <TextView
                    android:layout_below="@+id/mitraMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mitra Bisnis"
                    android:textSize="10dp"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="2dp"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <TextView

            android:layout_marginTop="20dp"
            android:id="@+id/greetingTextView1"
            android:layout_below="@id/menuRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:textSize="13dp"
            android:text="Assalamu’alaikum Wr. Wb." />

        <TextView
            android:layout_below="@+id/greetingTextView1"
            android:id="@+id/greetingTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="13dp"
            android:text="Selamat datang di aplikasi Heaven Green.\n\nAyo,bersama-sama kita berkontribusi dalam menjaga lingkungan dan menciptakan masa depan yang lebih hijau.Dengan aplikasi ini, Anda dapat memanfaatkan potensi sampah sebagai sumber daya yang berharga.\n\nMelalui Aplikasi Heaven Green, Anda dapat dengan mudah mendaur ulang dan mengelola sampah dengan efisien.Tukarkan sampah yang Anda kumpulkan dengan poin atau hadiah yang menarik, sehingga tidak hanya membantu lingkungan, tetapi juga memberikan manfaat bagi Anda secara langsung." />


    </RelativeLayout>
</ScrollView>



